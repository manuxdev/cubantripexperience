---
import Container from "@components/container.astro";
import { Picture } from "@astrojs/image/components";
import Logo from "../../assets/logo.webp";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Link from "@components/ui/link.astro";

const menuitems = [
  {
    title: "Features",
    path: "#",
    children: [
      { title: "Action", path: "/" },
      { title: "404 Page", path: "/404" },
    ],
  },
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "About",
    path: "/about",
  },

  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <div class="navbar bg-base-100 absolute z-10 bg-transparent">
    <div class="flex-1 ml-9 mt-2">
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <Picture
            src={Logo}
            alt="CubanTripExperience"
            widths={[50, 100, 150]}
            sizes="(max-width: 120px) 110px, 110px"
            loading="eager"
            format="avif"
          />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
    </div>
    <div class="flex-none">
      <div>
        <div class="hidden lg:flex items-center gap-4 mr-8">
          <a
            href="https://www.facebook.com/profile.php?id=61551441593993"
            target="_blank"
            aria-label="Facebook">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-facebook"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="#F2CB0F"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.instagram.com/cubantripexperience/"
            target="_blank"
            aria-label="Instagram">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-instagram"
              width="36"
              height="36"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="#F2CB0F"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
              ></path>
              <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
              <path d="M16.5 7.5l0 .01"></path>
            </svg>
          </a>
          <a
            href="https://api.whatsapp.com/send?phone=5353788250"
            target="_blank"
            aria-label="Whatsapp">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-whatsapp"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="#F2CB0F"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
              <path
                d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</Container>

